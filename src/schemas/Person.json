        "Person": {
            "title": "Person",
            "type": "object",
            "properties": {
                "name": {
                    "type": "{string}",
                    "title": "name"
                },
                "email": {
                    "type": "string",
                    "title": "email"
                },
                "phone": {
                    "type": "string",
                    "title": "phone"
                },
                "mobile": {
                    "type": "string",
                    "title": "mobile"
                },
                "address": {
                    "type": "string",
                    "title": "address"
                }
            },
            "additionalProperties": false,
            "required": [
                "email",
                "mobile",
                "name"
            ]
        }
    }
}
